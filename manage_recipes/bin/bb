void addRecipe(Map<String, List<String>> recipes, String name, List<String> ingredients) {
  recipes[name] = ingredients;
  print('Recipe "$name" added ');
}

void removeRecipe(Map<String, List<String>> recipes, String name) {
  if (recipes.containsKey(name)) {
    recipes.remove(name);
    print('Recipe "$name" removed successfully.');
  } else {
    print('Recipe "$name" not found.');
  }
}

void listRecipes(Map<String, List<String>> recipes) {
  if (recipes.isNotEmpty) {
    recipes.forEach((name, ingredients) {
      print('$name: ${ingredients.join(', ')}');
    });
  } else {
    print('No recipes available.');
  }
}

void searchRecipe(Map<String, List<String>> recipes, String name) {
  if (recipes.containsKey(name)) {
    print('$name: ${recipes[name]!.join(', ')}');
  } else {
    print('Recipe "$name" not found.');
  }
}
